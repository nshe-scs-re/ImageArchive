@code
{
    protected override void OnInitialized()
    {
      ThemeService.StateChanged += OnThemeChanged;
    }

    private void OnThemeChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        ThemeService.StateChanged -= OnThemeChanged;
    }
}