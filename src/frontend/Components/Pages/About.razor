</style>

@code {
    private string feedbackText;
    private int rating;
    private int feedbackCount = 0;
    private double averageRating = 0;
    private bool showFeedbackList = false;

    private List<Feedback> feedbackList = new List<Feedback>();

    private void SubmitFeedback()
    {
        feedbackCount++;
        averageRating = ((averageRating * (feedbackCount - 1)) + rating) / feedbackCount;

        // Add feedback to the list
        feedbackList.Add(new Feedback { Rating = rating, Comment = feedbackText });

        // Clear form fields
        feedbackText = string.Empty;
        rating = 0;
    }

    private void ToggleFeedbackList()
    {
        showFeedbackList = !showFeedbackList;
    }

    private class Feedback
    {
        public int Rating { get; set; }
        public string Comment { get; set; }
    }
}




