<div class="feedback-section">
    <h3>Give Us Your Feedback</h3>
    <div class="feedback-form">
        <input type="text" @bind="feedbackText" placeholder="Your feedback..." class="form-control my-2" />
        <select @bind="rating" class="form-select my-2">
            <option value="1">1 - Poor</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5 - Excellent</option>
        </select>
        <button @onclick="SubmitFeedback" class="btn btn-primary mt-2">Submit Feedback</button>
        <p class="feedback-stats mt-3">Total Feedback: @feedbackCount | Average Rating: @averageRating</p>
    </div>

    <div class="view-feedback mt-4">
        <button class="btn btn-secondary" @onclick="ToggleFeedbackList">
            @(showFeedbackList ? "Hide Feedback" : "View Feedback")
        </button>
        @if (showFeedbackList)
        {
            <ul class="feedback-list mt-3">
                @foreach (var feedback in feedbackList)
                {
                    <li class="feedback-item">
                        <p><strong>Rating:</strong> @feedback.Rating</p>
                        <p>@feedback.Comment</p>
                        <hr />
                    </li>
                }
            </ul>
        }
    </div>
</div>

<style>
    .feedback-section {
