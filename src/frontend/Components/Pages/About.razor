<div class="custom-feedback-section my-3" hidden>
  <h3>Give Us Your Feedback</h3>
  <div class="custom-feedback-form">
    <input type="text" @bind="feedbackText" placeholder="Your feedback..." class="form-control my-3" />
    <select @bind="rating" class="form-select my-3">
      <option value="1">1 - Poor</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5 - Excellent</option>
    </select>
    <button @onclick="SubmitFeedback" class="btn btn-primary mt-2">Submit Feedback</button>
    <p class="custom-feedback-stats mt-3">Total Feedback: @feedbackCount | Average Rating: @averageRating</p>
  </div>

  <div class="custom-view-feedback mt-4" hidden>
    <button class="btn btn-secondary" @onclick="ToggleFeedbackList">
        @(showFeedbackList ? "Hide Feedback" : "View Feedback")
    </button>
    @if (showFeedbackList)
    {
      <ul class="custom-feedback-list my-3">
        @foreach (var feedback in feedbackList)
        {
          <li class="custom-feedback-item">
            <p><strong>Rating:</strong> @feedback.Rating</p>
            <p>@feedback.Comment</p>
            <hr />
          </li>
        }
      </ul>
    }
  </div>
</div>

<div class="custom-achievements-container" hidden>
    <div class="custom-achievements">
        <h3>Platform Achievements</h3>
        <p><strong>Images Processed:</strong> @imagesProcessed</p>
        <p><strong>Users Served:</strong> @usersServed</p>
        <p><strong>Regions Covered:</strong> @regionsCovered</p>
    </div>
</div>


@code {
    private string feedbackText;
    private int rating;
    private int feedbackCount = 0;
    private double averageRating = 0;
    private bool showFeedbackList = false;

    private List<Feedback> feedbackList = new List<Feedback>();

    private void SubmitFeedback()
    {
        feedbackCount++;
        averageRating = ((averageRating * (feedbackCount - 1)) + rating) / feedbackCount;

        // Add feedback to the list
        feedbackList.Add(new Feedback { Rating = rating, Comment = feedbackText });

        // Clear form fields
        feedbackText = string.Empty;
        rating = 0;
    }

    private void ToggleFeedbackList()
    {
        showFeedbackList = !showFeedbackList;
    }

    private class Feedback
    {
        public int Rating { get; set; }
        public string Comment { get; set; }
    }

   
    private int imagesProcessed = 0;
    private int usersServed = 0;
    private int regionsCovered = 0;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500); // Simulate data load delay
        imagesProcessed = 1000000;
        usersServed = 2000;
        regionsCovered = 5;
    }
    protected override void OnInitialized()
    {
        ThemeService.StateChanged += StateHasChanged;
    }
    private string GetTheme()
    {
        return ThemeService.State ? "bg-body-tertiary" : "custom-color-bg-dm-secondary";
    }
    public void Dispose()
    {
        ThemeService.StateChanged -= StateHasChanged;
    }

}








